@model FreshRoots.Models.ProfileViewModel
@{
    string cacheBuster = DateTime.Now.Ticks.ToString(); // prevents stale image
}
<link rel="stylesheet" href="~/css/_ProfilePartial.css" asp-append-version="true" />

<div id="profile-partial-root" class="profile-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4><i class="fas fa-user me-2"></i>My Profile</h4>
        <button class="btn btn-outline-secondary" onclick="loadDashboard()">
            <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
        </button>
    </div>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-success">@ViewBag.Message</div>
    }

    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <div class="d-flex flex-column align-items-center">
                        @if (!string.IsNullOrWhiteSpace(Model.ProfilePicture))
                        {
                            <img src="@($"{Model.ProfilePicture}?t={cacheBuster}")" alt="Profile picture"
                                 style="width:90px;height:90px;object-fit:cover"
                                 class="rounded-circle mb-3 border" />
                        }
                        else if (!string.IsNullOrEmpty(Model.FullName))
                        {
                            <div class="user-avatar-large mb-3">
                                @Model.FullName[0]
                            </div>
                        }

                        <h4 class="mb-0">@Model.FullName</h4>
                        <p class="text-muted mb-0">@ViewBag.ProfileType</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h5>Profile Information</h5>

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                    <form id="profileForm"
                          asp-action="ProfilePartial"
                          asp-controller="Profile"
                          method="post"
                          enctype="multipart/form-data">
                        @Html.AntiForgeryToken()

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="FullName" class="form-label"></label>
                                <input asp-for="FullName" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="PhoneNumber" class="form-label"></label>
                                <input asp-for="PhoneNumber" class="form-control" />
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label"></label>
                                <input asp-for="Email" class="form-control" readonly />
                            </div>
                            <div class="col-md-6">
                                <input type="hidden" name="UserType" value="@ViewBag.ProfileType" />
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Address" class="form-label"></label>
                                <input asp-for="Address" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                @if (ViewBag.ProfileType == "Farmer")
                                {
                                    <label asp-for="PickupLocation" class="form-label"></label>
                                    <input asp-for="PickupLocation" class="form-control" />
                                }
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Profile Picture</label>
                            <input type="file" name="profileImageFile" class="form-control" accept=".jpg,.jpeg,.png,.webp,.gif" />
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Update Profile
                            </button>
                            @* <button type="button" class="btn btn-outline-secondary change-password-btn">
                                <i class="fas fa-lock me-2"></i>Change Password
                            </button> *@
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
