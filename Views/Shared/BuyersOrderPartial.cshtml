@model IEnumerable<FreshRoots.Models.Order>

<div class="orders-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4>My Orders</h4>
        <button onclick="loadDashboard()" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i> Back to Dashboard
        </button>
    </div>

    @if (Model != null && Model.Any())
    {
        foreach (var order in Model)
        {
            <div class="card mb-4">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="mb-0">Order #@order.Id</h5>
                            <small class="text-muted">Placed on @order.OrderDate.ToString("MMMM dd, yyyy hh:mm tt")</small>
                        </div>
                        <div>
                            <span class="badge @GetStatusBadgeClass(order.Status)">@order.Status</span>
                            <strong class="ms-2">৳@order.TotalAmount.ToString("N2")</strong>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in order.OrderItems)
                            {
                                <tr>
                                    <td>@item.Product?.Name</td>
                                    <td>৳@item.Price.ToString("N2")</td>
                                    <td>@item.Quantity</td>
                                    <td>৳@((item.Price * item.Quantity).ToString("N2"))</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-info text-center">
            <i class="fas fa-shopping-cart fa-3x mb-3"></i>
            <h4>No orders yet!</h4>
            <p>You haven't placed any orders yet.</p>
            <a asp-controller="Products" asp-action="Index" class="btn btn-primary">Start Shopping</a>
        </div>
    }
</div>

@functions {
    public string GetStatusBadgeClass(string status)
    {
        return status.ToLower() switch
        {
            "pending" => "bg-warning",
            "shipped" => "bg-info",
            "delivered" => "bg-success",
            "cancelled" => "bg-danger",
            _ => "bg-secondary"
        };
    }
}