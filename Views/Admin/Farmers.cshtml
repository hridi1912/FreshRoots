@model IEnumerable<FreshRoots.Models.Farmer>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Farmers";
}

<h2>Farmers</h2>
<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>FarmerId</th>
            <th>UserId</th>
            <th>Full Name</th>
            <th>Phone Number</th>
            <th>Address</th>
            <th>Pickup Location</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var farmer in Model)
        {
            <tr>
                <td>@farmer.FarmerId</td>
                <td>@farmer.UserId</td>
                <td>@farmer.FullName</td>
                <td>@farmer.PhoneNumber</td>
                <td>@farmer.Address</td>
                <td>@farmer.PickupLocation</td>
                <td>
                    <a href="/Admin/EditFarmer/@farmer.FarmerId" class="btn btn-sm btn-primary">Edit</a>
                    <a href="/Admin/DeleteFarmer/@farmer.FarmerId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
