@model FreshRoots.Models.OrderItem
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Edit Order Item";
}
<h2>Edit Order Item</h2>

<form asp-action="EditOrderItem" method="post" novalidate>
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <div class="text-danger mb-3" asp-validation-summary="All"></div>

    <div class="mb-3">
        <label class="form-label">Order Id</label>
        <input asp-for="OrderId" class="form-control" readonly />
    </div>

    <div class="mb-3">
        <label class="form-label">Product Id</label>
        <input asp-for="ProductId" class="form-control" readonly />
    </div>

    <div class="mb-3">
        <label class="form-label">Farmer Id</label>
        <input asp-for="FarmerId" class="form-control" readonly />
    </div>

    <div class="mb-3">
        <label class="form-label">Buyer Id</label>
        <input value="@Model.Order?.BuyerId" class="form-control" readonly />
    </div>

    <div class="mb-3">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" type="number" step="0.01" class="form-control" />
        <span class="text-danger" asp-validation-for="Price"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Quantity" class="form-label"></label>
        <input asp-for="Quantity" type="number" class="form-control" />
        <span class="text-danger" asp-validation-for="Quantity"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Status" class="form-label"></label>
        <select asp-for="Status" class="form-select">
            <option>Pending</option>
            <option>Processing</option>
            <option>Shipped</option>
            <option>Delivered</option>
        </select>
        <span class="text-danger" asp-validation-for="Status"></span>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a href="/Admin/Orders" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
