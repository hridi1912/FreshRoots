@model FreshRoots.Models.Buyer
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Delete Buyer";
}

<h2>Delete Buyer</h2>
<p>Are you sure you want to delete this buyer?</p>

<ul>
    <li><strong>Full Name:</strong> @Model.FullName</li>
    <li><strong>Phone:</strong> @Model.PhoneNumber</li>
    <li><strong>Address:</strong> @Model.Address</li>
</ul>

<form asp-action="DeleteBuyer" method="post">
    <input type="hidden" asp-for="BuyerId" />
    <button type="submit" class="btn btn-danger">Confirm Delete</button>
    <a href="/Admin/Buyers" class="btn btn-secondary">Cancel</a>
</form>