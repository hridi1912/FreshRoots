@model FreshRoots.Models.Product
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Edit Product";
}

<h2>Edit Product</h2>

<form asp-action="EditProduct" method="post" novalidate>
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="text-danger mb-3" asp-validation-summary="All"></div>

    <div class="mb-3">
        <label asp-for="FarmerId" class="form-label"></label>
        <input asp-for="FarmerId" class="form-control" readonly />
        <span class="text-danger" asp-validation-for="FarmerId"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" type="number" step="0.01" class="form-control" />
        <span class="text-danger" asp-validation-for="Price"></span>
    </div>

    <div class="mb-3">
        <label asp-for="StockQuantity" class="form-label"></label>
        <input asp-for="StockQuantity" type="number" class="form-control" />
        <span class="text-danger" asp-validation-for="StockQuantity"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Category" class="form-label"></label>
        <input asp-for="Category" class="form-control" />
        <span class="text-danger" asp-validation-for="Category"></span>
    </div>

    <div class="mb-3">
        <label asp-for="HarvestDate" class="form-label"></label>
        <input asp-for="HarvestDate" type="date" class="form-control" />
        <span class="text-danger" asp-validation-for="HarvestDate"></span>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a href="/Admin/Products" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
