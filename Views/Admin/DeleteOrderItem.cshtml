@model FreshRoots.Models.OrderItem
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Delete Order Item";
}

<h2>Delete Order Item</h2>
<p>Are you sure you want to delete this Order Item?</p>

<ul>
    <li><strong>OrderId:</strong> @Model.OrderId</li>
    <li><strong>ProductId:</strong> @Model.ProductId</li>
    <li><strong>FarmerId:</strong> @Model.FarmerId</li>
    <li><strong>BuyerId:</strong> @Model.Order?.BuyerId</li>
    <li><strong>Price:</strong> @Model.Price</li>
    <li><strong>Quantity:</strong> @Model.Quantity</li>
    <li><strong>Status:</strong> @Model.Status</li>
</ul>

<form asp-action="DeleteOrderItem" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Confirm Delete</button>
    <a href="/Admin/Orders" class="btn btn-secondary">Cancel</a>
</form>