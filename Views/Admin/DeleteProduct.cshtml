@model FreshRoots.Models.Product
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Delete Product";
}

<h2>Delete Product</h2>
<p>Are you sure you want to delete this product?</p>

<ul>
    <li><strong>Name:</strong> @Model.Name</li>
    <li><strong>Description:</strong> @Model.Description</li>
    <li><strong>Price:</strong> @Model.Price</li>
    <li><strong>Stock Quantity:</strong> @Model.StockQuantity</li>
    <li><strong>Category:</strong> @Model.Category</li>
    <li><strong>Harvest Date:</strong> @Model.HarvestDate.ToShortDateString()</li>
</ul>

<form asp-action="DeleteProduct" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Confirm Delete</button>
    <a href="/Admin/Products" class="btn btn-secondary">Cancel</a>
</form>
