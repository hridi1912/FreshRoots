@model FreshRoots.Models.Order

<div class="container mt-5">
    <h2>Order Confirmation</h2>
    <p>Thank you! Your order has been placed successfully.</p>
    <p><strong>Order ID:</strong> @Model.Id</p>
    <p><strong>Total:</strong> ৳@Model.TotalAmount.ToString("N2")</p>

    <table class="table table-bordered mt-3">
        <thead>
            <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Subtotal</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderItems)
            {
                <tr>
                    <td>@item.Product?.Name</td>
                    <td>৳@item.Price.ToString("N2")</td>
                    <td>@item.Quantity</td>
                    <td>৳@(item.Price* item.Quantity).ToString("N2")</td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-controller="Products" asp-action="Index" class="btn btn-primary">Continue Shopping</a>
    <a asp-action="MyOrders" class="btn btn-secondary">View My Orders</a>
</div>

