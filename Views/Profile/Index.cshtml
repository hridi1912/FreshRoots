@model dynamic
@{
    var profileType = ViewBag.ProfileType as string;
}

<div class="container mt-4">
    <h2><i class="fas fa-user-circle"></i> My Profile</h2>
    <hr />

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-success">@ViewBag.Message</div>
    }

    <form asp-action="ProfilePartial" asp-controller="Profile" method="post">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label class="form-label">Full Name</label>
            <input name="FullName" value="@Model?.FullName" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Phone Number</label>
            <input name="PhoneNumber" value="@Model?.PhoneNumber" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Address</label>
            <input name="Address" value="@Model?.Address" class="form-control" />
        </div>

        @if (profileType == "Farmer")
        {
            <div class="mb-3">
                <label class="form-label">Pickup Location</label>
                <input name="PickupLocation" value="@Model?.PickupLocation" class="form-control" />
            </div>
        }

        <div class="mb-3">
            <label class="form-label">Profile Picture (URL)</label>
            <input name="ProfilePicture" value="@Model?.ProfilePicture" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">User Type</label>
            <input type="text" class="form-control" value="@profileType" readonly />
        </div>

        <button type="submit" class="btn btn-primary">Update Profile</button>
    </form>
</div>
