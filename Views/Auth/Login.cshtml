@model FreshRoots.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login - FreshRoots";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Login - FreshRoots</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600;700&family=Playfair+Display:wght@400;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary: #5DBE7E;
            --primary-light: #8DD4A3;
            --primary-dark: #3FA864;
            --secondary: #FFC857;
            --accent: #FF9B85;
            --light: #FFF9F0;
            --dark: #4A4A4A;
        }

        body {
            font-family: 'Open Sans', sans-serif;
            background: linear-gradient(rgba(255, 255, 255, 0.9), rgba(255, 255, 255, 0.9)), url('https://images.unsplash.com/photo-1500937386664-56d1dfef3854?ixlib=rb-4.0.3&auto=format&fit=crop&w=1600&q=80') no-repeat center center fixed;
            min-height: 100vh;
            align-items: center;
            padding: 20px 0;
            position: relative;
            overflow-x: hidden;
        }

        h1, h2, h3, h4, h5, h6 {
            font-family: 'Playfair Display', serif;
            color: var(--dark);
            font-weight: 700;
        }

        .decoration {
            position: absolute;
            z-index: 0;
        }

        .decoration-1 {
            top: 10%;
            left: 5%;
            font-size: 40px;
            transform: rotate(-15deg);
            color: var(--primary-light);
        }

        .decoration-2 {
            top: 15%;
            right: 7%;
            font-size: 35px;
            transform: rotate(10deg);
            color: var(--accent);
        }

        .decoration-3 {
            bottom: 20%;
            left: 8%;
            font-size: 30px;
            transform: rotate(5deg);
            color: var(--secondary);
        }

        .decoration-4 {
            bottom: 15%;
            right: 10%;
            font-size: 45px;
            transform: rotate(-5deg);
            color: var(--primary);
        }

        .login-container {
            background: white;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(91, 190, 126, 0.15);
            overflow: hidden;
            margin: 0 auto;
            max-width: 1000px;
            width: 90%;
            position: relative;
            z-index: 1;
            border: 3px solid var(--primary-light);
        }

        .login-left {
            background: linear-gradient(rgba(93, 190, 126, 0.85), rgba(93, 190, 126, 0.85)), url('https://images.unsplash.com/photo-1471194402529-8e0f5a675de6?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=800&q=80') no-repeat center center;
            background-size: cover;
            color: white;
            padding: 40px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            position: relative;
        }

        .login-right {
            padding: 40px;
            background: white;
        }

        .logo {
            font-family: 'Playfair Display', serif;
            font-size: 32px;
            font-weight: 700;
            color: white;
            margin-bottom: 25px;
            text-align: center;
        }

            .logo span {
                color: var(--secondary);
            }

        .cute-mascot {
            text-align: center;
            margin-bottom: 20px;
            font-size: 80px;
        }

        .benefit-item {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
            background: rgba(255, 255, 255, 0.2);
            padding: 15px;
            border-radius: 15px;
            backdrop-filter: blur(5px);
        }

        .benefit-icon {
            width: 45px;
            height: 45px;
            background: rgba(255, 255, 255, 0.3);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 15px;
            font-size: 20px;
            color: white;
        }

        .form-label {
            font-weight: 600;
            color: var(--dark);
            margin-bottom: 8px;
            font-size: 16px;
        }

        .form-control {
            padding: 14px 16px;
            border: 2px solid #E8F5E9;
            border-radius: 12px;
            transition: all 0.3s;
            background-color: #F9FFFA;
        }

            .form-control:focus {
                border-color: var(--primary);
                box-shadow: 0 0 0 0.25rem rgba(93, 190, 126, 0.25);
                background-color: white;
            }

        .btn-success {
            background: linear-gradient(to right, var(--primary), var(--primary-dark));
            border: none;
            padding: 14px;
            border-radius: 12px;
            font-weight: 700;
            transition: all 0.3s;
            box-shadow: 0 4px 8px rgba(93, 190, 126, 0.3);
        }

            .btn-success:hover {
                transform: translateY(-3px);
                box-shadow: 0 6px 12px rgba(93, 190, 126, 0.4);
            }

        .divider {
            display: flex;
            align-items: center;
            margin: 25px 0;
        }

            .divider::before, .divider::after {
                content: "";
                flex: 1;
                height: 2px;
                background: linear-gradient(to right, transparent, #E8F5E9, transparent);
            }

        .divider-text {
            padding: 0 15px;
            color: var(--primary);
            font-size: 14px;
            font-weight: 600;
        }

        .social-login {
            display: flex;
            gap: 15px;
            margin-bottom: 20px;
        }

        .social-btn {
            flex: 1;
            padding: 12px;
            border: 2px solid #E8F5E9;
            border-radius: 12px;
            background: white;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            transition: all 0.3s;
            font-weight: 600;
        }

            .social-btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            }

            .social-btn.google {
                color: #DB4437;
            }

            .social-btn.facebook {
                color: #4267B2;
            }

        .back-to-home {
            position: absolute;
            top: 20px;
            left: 20px;
            color: var(--primary);
            text-decoration: none;
            font-weight: 700;
            display: flex;
            align-items: center;
            gap: 5px;
            z-index: 2;
            background: white;
            padding: 8px 15px;
            border-radius: 20px;
            box-shadow: 0 4px 8px rgba(93, 190, 126, 0.2);
            transition: all 0.3s;
        }

            .back-to-home:hover {
                transform: translateY(-2px);
                color: var(--primary-dark);
                box-shadow: 0 6px 12px rgba(93, 190, 126, 0.3);
            }

        .role-selector {
            display: flex;
            gap: 15px;
            margin-bottom: 20px;
            flex-wrap: nowrap;
        }

        .role-option {
            flex: 1;
            text-align: center;
            padding: 15px 10px;
            border: 2px solid #e9ecef;
            border-radius: 10px;
            cursor: pointer;
            transition: all 0.3s;
            min-width: 120px;
        }

            .role-option:hover {
                border-color: var(--primary);
                transform: translateY(-2px);
            }

            .role-option.selected {
                border-color: var(--primary);
                background-color: rgba(93, 190, 126, 0.1);
                box-shadow: 0 4px 8px rgba(93, 190, 126, 0.2);
            }

        .role-icon {
            font-size: 24px;
            margin-bottom: 8px;
            color: var(--primary);
        }
    </style>
</head>
<body>
    
    <a href="/" class="back-to-home"><i class="fas fa-arrow-left"></i> Back to Home</a>

    <div class="login-container">
        <div class="row g-0">
            <div class="col-md-6 login-left">
                <div class="cute-mascot">🌱</div>
                <div class="logo"><i class="fas fa-leaf me-2"></i>Fresh<span>Roots</span></div>
                <h2>Welcome Back!</h2>
                <p>We've missed you! Sign in to continue your fresh food journey.</p>

                <div class="benefits-list mt-4">
                    <div class="benefit-item"><div class="benefit-icon"><i class="fas fa-truck"></i></div><div><h5>Fast Delivery</h5><p>Get your orders delivered quickly</p></div></div>
                    <div class="benefit-item"><div class="benefit-icon"><i class="fas fa-leaf"></i></div><div><h5>Quality Produce</h5><p>100% organic and fresh from the farm</p></div></div>
                    <div class="benefit-item"><div class="benefit-icon"><i class="fas fa-shield-alt"></i></div><div><h5>Secure Account</h5><p>Your data is always protected</p></div></div>
                </div>
            </div>

            <div class="col-md-6 login-right">
                <h2 class="mb-4 text-center">Sign In</h2>

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger">@ViewBag.Error</div>
                }
                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-success">@TempData["Message"]</div>
                }

                <div class="social-login">
                    <button class="social-btn google"><i class="fab fa-google"></i> Google</button>
                    <button class="social-btn facebook"><i class="fab fa-facebook"></i> Facebook</button>
                </div>

                <div class="divider"><span class="divider-text">or use email</span></div>

                <form asp-action="Login" method="post">
                    @Html.AntiForgeryToken()

                    @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ErrorCount > 0)
                    {
                        <div asp-validation-summary="All" class="alert alert-danger"></div>
                    }


                    <!-- Role Selector -->
                    <div class="role-selector">
                        <div class="role-option selected" data-role="Buyer">
                            <div class="role-icon"><i class="fas fa-shopping-basket"></i></div> Buyer
                        </div>
                        <div class="role-option" data-role="Farmer">
                            <div class="role-icon"><i class="fas fa-tractor"></i></div> Farmer
                        </div>
                    </div>
                    <!-- Hidden input to store selected role -->
                    <input type="hidden" asp-for="Role" id="loginRole" value="Buyer" />

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" type="password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-check mb-3">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label"></label>
                    </div>

                    <button type="submit" class="btn btn-success">Sign In</button>
                </form>
                <p class="text-center mb-0">
                    Don't have an account? <a href="/Auth/Register" class="signup-link">Sign Up Now</a>
                </p>
            </div>
        </div>
    </div>

    <script>
        // Role selection functionality
        document.querySelectorAll('.role-option').forEach(option => {
            option.addEventListener('click', function() {
                document.querySelectorAll('.role-option').forEach(opt => opt.classList.remove('selected'));
                this.classList.add('selected');
                document.getElementById('loginRole').value = this.getAttribute('data-role');
            });
        });
    </script>
</body>
</html>