@{
    ViewData["Title"] = "Register - FreshRoots";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Login - FreshRoots</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600;700&family=Playfair+Display:wght@400;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary: #5DBE7E;
            --primary-light: #8DD4A3;
            --primary-dark: #3FA864;
            --secondary: #FFC857;
            --accent: #FF9B85;
            --light: #FFF9F0;
            --dark: #4A4A4A;
        }

        body {
            font-family: 'Open Sans', sans-serif;
            background-color: var(--light);
            min-height: 100vh;
            
            align-items: center;
            padding: 20px 0;
            position: relative;
            overflow-x: hidden;
        }

        h1, h2, h3, h4, h5, h6 {
            font-family: 'Playfair Display', serif;
            color: var(--dark);
            font-weight: 700;
        }

        /* Cute decorative elements */
        .decoration {
            position: absolute;
            z-index: 0;
        }

        .decoration-1 {
            top: 10%;
            left: 5%;
            font-size: 40px;
            transform: rotate(-15deg);
            color: var(--primary-light);
        }

        .decoration-2 {
            top: 15%;
            right: 7%;
            font-size: 35px;
            transform: rotate(10deg);
            color: var(--accent);
        }

        .decoration-3 {
            bottom: 20%;
            left: 8%;
            font-size: 30px;
            transform: rotate(5deg);
            color: var(--secondary);
        }

        .decoration-4 {
            bottom: 15%;
            right: 10%;
            font-size: 45px;
            transform: rotate(-5deg);
            color: var(--primary);
        }

        .login-container {
            background: white;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(91, 190, 126, 0.15);
            overflow: hidden;
            margin: 0 auto;
            max-width: 1000px;
            max-height: 50%;
            width: 90%;
            position: relative;
            z-index: 1;
            border: 3px solid var(--primary-light);
        }

        .login-left {
            background: linear-gradient(rgba(93, 190, 126, 0.85), rgba(93, 190, 126, 0.85)), url('https://images.unsplash.com/photo-1471194402529-8e0f5a675de6?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=800&q=80') no-repeat center center;
            background-size: cover;
            color: white;
            padding: 40px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            position: relative;
        }

        .login-right {
            padding: 40px;
            background: white;
        }

        .logo {
            font-family: 'Playfair Display', serif;
            font-size: 32px;
            font-weight: 700;
            color: white;
            margin-bottom: 25px;
            text-align: center;
        }

            .logo span {
                color: var(--secondary);
            }

        .cute-mascot {
            text-align: center;
            margin-bottom: 20px;
            font-size: 80px;
        }

        .benefit-item {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
            background: rgba(255, 255, 255, 0.2);
            padding: 15px;
            border-radius: 15px;
            backdrop-filter: blur(5px);
        }

        .benefit-icon {
            width: 45px;
            height: 45px;
            background: rgba(255, 255, 255, 0.3);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 15px;
            font-size: 20px;
            color: white;
        }

        .form-label {
            font-weight: 600;
            color: var(--dark);
            margin-bottom: 8px;
            font-size: 16px;
        }

        .form-control {
            padding: 14px 16px;
            border: 2px solid #E8F5E9;
            border-radius: 12px;
            transition: all 0.3s;
            background-color: #F9FFFA;
        }

            .form-control:focus {
                border-color: var(--primary);
                box-shadow: 0 0 0 0.25rem rgba(93, 190, 126, 0.25);
                background-color: white;
            }

        .input-group-text {
            background-color: #E8F5E9;
            border: 2px solid #E8F5E9;
            border-radius: 12px 0 0 12px;
            color: var(--primary);
        }

        .btn-success {
            background: linear-gradient(to right, var(--primary), var(--primary-dark));
            border: none;
            padding: 14px;
            border-radius: 12px;
            font-weight: 700;
            transition: all 0.3s;
            box-shadow: 0 4px 8px rgba(93, 190, 126, 0.3);
        }

            .btn-success:hover {
                transform: translateY(-3px);
                box-shadow: 0 6px 12px rgba(93, 190, 126, 0.4);
            }

        .divider {
            display: flex;
            align-items: center;
            margin: 25px 0;
        }

            .divider::before, .divider::after {
                content: "";
                flex: 1;
                height: 2px;
                background: linear-gradient(to right, transparent, #E8F5E9, transparent);
            }

        .divider-text {
            padding: 0 15px;
            color: var(--primary);
            font-size: 14px;
            font-weight: 600;
        }

        .social-login {
            display: flex;
            gap: 15px;
            margin-bottom: 20px;
        }

        .social-btn {
            flex: 1;
            padding: 12px;
            border: 2px solid #E8F5E9;
            border-radius: 12px;
            background: white;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            transition: all 0.3s;
            font-weight: 600;
        }

            .social-btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            }

            .social-btn.google {
                color: #DB4437;
            }

            .social-btn.facebook {
                color: #4267B2;
            }

        .back-to-home {
            position: absolute;
            top: 20px;
            left: 20px;
            color: var(--primary);
            text-decoration: none;
            font-weight: 700;
            display: flex;
            align-items: center;
            gap: 5px;
            z-index: 2;
            background: white;
            padding: 8px 15px;
            border-radius: 20px;
            box-shadow: 0 4px 8px rgba(93, 190, 126, 0.2);
            transition: all 0.3s;
        }

            .back-to-home:hover {
                transform: translateY(-2px);
                color: var(--primary-dark);
                box-shadow: 0 6px 12px rgba(93, 190, 126, 0.3);
            }

        .remember-forgot {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .form-check-input {
            width: 18px;
            height: 18px;
            margin-top: 0.2em;
        }

            .form-check-input:checked {
                background-color: var(--primary);
                border-color: var(--primary);
            }

        .forgot-password {
            color: var(--primary);
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s;
        }

            .forgot-password:hover {
                color: var(--primary-dark);
                text-decoration: underline;
            }

        .signup-link {
            color: var(--primary);
            font-weight: 700;
            text-decoration: none;
            transition: all 0.3s;
        }

            .signup-link:hover {
                color: var(--primary-dark);
                text-decoration: underline;
            }

        /* Role Selector Styles */
        .role-selector {
            display: flex;
            gap: 15px;
            margin-bottom: 20px;
            width: 100%; /* Changed from max-width: 20px */
            flex-wrap: nowrap; /* Prevent wrapping */
        }

        .role-option {
            flex: 1;
            text-align: center;
            padding: 15px 10px;
            border: 2px solid #e9ecef;
            border-radius: 10px;
            cursor: pointer;
            transition: all 0.3s;
            min-width: 120px;
        }

            .role-option:hover {
                border-color: var(--primary);
                transform: translateY(-2px);
            }

            .role-option.selected {
                border-color: var(--primary);
                background-color: rgba(93, 190, 126, 0.1);
                box-shadow: 0 4px 8px rgba(93, 190, 126, 0.2);
            }

        .role-icon {
            font-size: 24px;
            margin-bottom: 8px;
            color: var(--primary);
        }
        

        {
            display: none;
        }

        .back-to-home {
            position: relative;
            top: 0;
            left: 0;
            margin-bottom: 20px;
            display: inline-flex;
        }

        .decoration-1,
        .decoration-2,
        .decoration-3,
        .decoration-4 {
            display: none;
        }

        .role-selector {
            flex-direction: column;
        }

        }
    </style>
</head>
<body>
    <!-- Cute decorative elements -->
    <div class="decoration decoration-1">🌼</div>
    <div class="decoration decoration-2">🍓</div>
    <div class="decoration decoration-3">🐞</div>
    <div class="decoration decoration-4">🦋</div>

    <!-- Back to home link -->
    <a href="/" class="back-to-home">
        <i class="fas fa-arrow-left"></i> Back to Home
    </a>

    <div class="login-container">
        <div class="row g-0">
            <div class="col-md-6 login-left">
                <div class="cute-mascot">🌱</div>
                <div class="logo">
                    <i class="fas fa-leaf me-2"></i>Fresh<span>Roots</span>
                </div>
                <h2>Welcome Back!</h2>
                <p>We've missed you! Sign in to continue your fresh food journey.</p>

                <div class="benefits-list mt-4">
                    <div class="benefit-item">
                        <div class="benefit-icon">
                            <i class="fas fa-truck"></i>
                        </div>
                        <div>
                            <h5>Fast Delivery</h5>
                            <p>Get your orders delivered quickly</p>
                        </div>
                    </div>

                    <div class="benefit-item">
                        <div class="benefit-icon">
                            <i class="fas fa-leaf"></i>
                        </div>
                        <div>
                            <h5>Quality Produce</h5>
                            <p>100% organic and fresh from the farm</p>
                        </div>
                    </div>

                    <div class="benefit-item">
                        <div class="benefit-icon">
                            <i class="fas fa-shield-alt"></i>
                        </div>
                        <div>
                            <h5>Secure Account</h5>
                            <p>Your data is always protected</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6 login-right">
                <h2 class="mb-4 text-center">Sign In</h2>

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger">@ViewBag.Error</div>
                }
                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-success">@TempData["Message"]</div>
                }

                <!-- Role Selector -->
                <div class="mb-4">
                    <label class="form-label">I am logging in as a:</label>
                    <div class="role-selector">
                        <div class="role-option selected" data-role="Buyer">
                            <div class="role-icon">
                                <i class="fas fa-shopping-basket"></i>
                            </div>
                            <h6>Buyer</h6>
                            
                        </div>
                        <div class="role-option" data-role="Farmer">
                            <div class="role-icon">
                                <i class="fas fa-tractor"></i>
                            </div>
                            <h6>Farmer</h6>
                           
                        </div>
                    </div>
                    <input type="hidden" name="role" id="selectedRole" value="Buyer" required />
                </div>

                <div class="social-login">
                    <button class="social-btn google">
                        <i class="fab fa-google"></i>
                        Google
                    </button>
                    <button class="social-btn facebook">
                        <i class="fab fa-facebook"></i>
                        Facebook
                    </button>
                </div>

                <div class="divider">
                    <span class="divider-text">or use email</span>
                </div>

                <form method="post" asp-action="Login">
                    <input type="hidden" name="role" id="loginRole" value="Buyer" />

                    <div class="mb-3">
                        <label class="form-label">Email Address</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                            <input type="email" name="email" class="form-control" placeholder="your.email@example.com" required />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Password</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-lock"></i></span>
                            <input type="password" name="password" class="form-control" placeholder="Enter your password" required />
                        </div>
                    </div>

                    <div class="remember-forgot">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="rememberMe">
                            <label class="form-check-label" for="rememberMe">
                                Remember me
                            </label>
                        </div>
                        <a href="/Auth/ForgotPassword" class="forgot-password">Forgot password?</a>
                    </div>

                    <button type="submit" class="btn btn-success w-100 py-3 mb-3">
                        <i class="fas fa-sign-in-alt me-2"></i>Sign In
                    </button>
                </form>

                <p class="text-center mb-0">
                    Don't have an account? <a href="/Auth/Register" class="signup-link">Sign Up Now</a>
                </p>
            </div>
        </div>
    </div>

    <script>
        // Role selection functionality
        document.querySelectorAll('.role-option').forEach(option => {
            option.addEventListener('click', function() {
                // Remove selected class from all options
                document.querySelectorAll('.role-option').forEach(opt => {
                    opt.classList.remove('selected');
                });

                // Add selected class to clicked option
                this.classList.add('selected');

                // Update the hidden input value
                const selectedRole = this.getAttribute('data-role');
                document.getElementById('selectedRole').value = selectedRole;
                document.getElementById('loginRole').value = selectedRole;
            });
        });

        // Simple form validation enhancement
        document.querySelector('form').addEventListener('submit', function(e) {
            const email = document.querySelector('input[name="email"]');
            const password = document.querySelector('input[name="password"]');

            if (!email.value || !password.value) {
                e.preventDefault();
                if (!email.value) {
                    email.classList.add('is-invalid');
                }
                if (!password.value) {
                    password.classList.add('is-invalid');
                }

                // Show error message if not already shown
                if (!document.querySelector('.alert-danger')) {
                    const errorDiv = document.createElement('div');
                    errorDiv.className = 'alert alert-danger mt-3';
                    errorDiv.textContent = 'Please fill in all required fields.';
                    document.querySelector('.login-right').insertBefore(errorDiv, document.querySelector('form'));
                }
            }
        });

        // Remove invalid class when user starts typing
        document.querySelectorAll('.form-control').forEach(input => {
            input.addEventListener('input', function() {
                this.classList.remove('is-invalid');
            });
        });
    </script>
</body>
</html>