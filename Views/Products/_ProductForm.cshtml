@model FreshRoots.Models.Product

<div asp-validation-summary="All" class="text-danger mb-3"></div>

<div class="row g-3">
    <div class="col-md-6">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Category" class="form-label"></label>
        <select asp-for="Category" class="form-select">
            <option value="">-- Select Category --</option>
            <option value="Vegetables">Vegetables</option>
            <option value="Fruits">Fruits</option>
            <option value="Meat">Meat</option>
            <option value="Dairy">Dairy</option>
            <option value="Grains">Grains</option>
        </select>
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>


    <div class="col-12">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="StockQuantity" class="form-label"></label>
        <input asp-for="StockQuantity" class="form-control" />
        <span asp-validation-for="StockQuantity" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="HarvestDate" class="form-label"></label>
        <input asp-for="HarvestDate" class="form-control" type="date" />
        <span asp-validation-for="HarvestDate" class="text-danger"></span>
    </div>

    <div class="col-12">
        <label class="form-label">Product Image</label>
        <input type="file" name="imageFile" class="form-control" accept=".jpg,.jpeg,.png,.webp,.gif" />
        @if (!string.IsNullOrWhiteSpace(Model?.ImageUrl))
        {
            <div class="mt-2">
                <img src="@Model.ImageUrl" alt="Current image" style="max-height:140px;object-fit:cover" class="rounded border" />
            </div>
        }
    </div>

    <div class="col-md-6">
        <label class="form-label">Farm Name</label>
        <input name="FarmerProfile.FarmName" value="@Model?.FarmerProfile?.FarmName" class="form-control" />
    </div>

    <div class="col-md-6">
        <label class="form-label">Certification</label>
        <input name="FarmerProfile.Certification" value="@Model?.FarmerProfile?.Certification" class="form-control" />
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
